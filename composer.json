{
    "name": "laracrafthub/ddd-template",
    "type": "project",
    "description": "A ready-to-use Laravel template designed for building web applications using DDD.",
    "keywords": ["laravel", "ddd", "domain-driven-design", "template"],
    "license": "MIT",
    "require": {
        "php": "^8.3.0",
        "laravel/framework": "^v11.4.0",
        "laravel/tinker": "^2.9"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.0",
        "brianium/paratest": "^7.4",
        "driftingly/rector-laravel": "^1.1.0",
        "ergebnis/phpstan-rules": "^2.2",
        "fakerphp/faker": "^1.23.0",
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.15",
        "laravel/sail": "^1.29.0",
        "mockery/mockery": "^1.6.11",
        "nunomaduro/collision": "^v8.1.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.5.0",
        "rector/rector": "^1.0.4",
        "roave/security-advisories": "dev-latest",
        "spatie/laravel-ignition": "^2.0",
        "spaze/phpstan-disallowed-calls": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Quality\\PHPStan\\": "quality/phpstan/src/"
        },
        "files": [
            "app/helpers.php",
            "bootstrap/alias.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "barryvdh/laravel-ide-helper"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.3.0"
        },
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
